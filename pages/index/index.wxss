.modal-section {
  width: 100%;
  margin-bottom: 30rpx;
}
.modal-section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.modal-list {
  margin-left: 10rpx;
}
.modal-list-item {
  font-size: 22rpx;
  color: #555;
  margin-bottom: 8rpx;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
}

.title {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 40rpx;
}

.search {
  width: 80%;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  font-size: 24rpx;
}

.recipe-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.recipe-item {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  width: 80vw;
  max-width: 600rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  object-fit: cover;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 20rpx;
}

.modal-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.modal-close {
  width: 100%;
  background: #ff9800;
  color: #fff;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.recipe-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  object-fit: cover;
  background: #f5f5f5;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.recipe-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
}

.recipe-desc {
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
}
