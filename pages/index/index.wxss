.loading-spinner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  background: rgba(255,255,255,0.3);
}
.spinner-img {
  width: 60rpx;
  height: 60rpx;
  animation: spin 1s linear infinite;
}
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.recipe-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  text-align: center;
  margin-top: 16rpx;
}

.no-results-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  opacity: 0.9;
}

.no-results-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.no-results-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  max-width: 80%;
}
.card {
  width: 100%;
  box-sizing: border-box;
}
.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  padding: 0 24rpx;
  margin: 12rpx 0;
  height: 64rpx;
  width: 100%;
  box-sizing: border-box;
}
.search-input {
  flex: 1;
  border: none;
  outline: none;
  font-size: 28rpx;
  background: transparent;
  height: 100%;
}
.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 16rpx;
}
.title {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 40rpx;
}

.search {
  width: 80%;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  font-size: 24rpx;
}

.recipe-item {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.recipe-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
  object-fit: cover;
  background: #f5f5f5;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.recipe-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
}

.recipe-desc {
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
}

.title-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-bottom: 30px;
}
.title-text {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 80%;
}
.title-greeting {
  font-size: 12px;
  flex: 1;
  color: #8d8c8c;
}

.title-greeting2 {
  font-size: 24px;
  font-weight: bold;
  flex: 1;
  width: 85%;
}

.user-avatar{
  width: 50px;
  height: 50px;
  border-radius: 100%;
}

.section {
  display: inline-block;
  width: 100%;
}

.section-title-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 50rpx;
}

.section-title {
  font-size: 20px;
  font-weight: bold;
}

.category-section{
  overflow: scroll;
}

.category-list{
  display: inline-block;
  width: 2100px;
}
.category-card {
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  border-radius: 10px;
  width: 96px;
  height: 100px;
  margin: 0 10px;
  padding: 10px;
  text-align: center;
  float: left;
}

.category-icon{
  width: 100px;
  height: 67px;
  display: block;
  margin: auto;
  margin-bottom: 7px;
}

.first-item {
  margin-left: 50rpx;
}

.category-text{
  font-size: 12px;
  color: #000;
}

.recipe-list {
  display: flex;
  flex-wrap: wrap; /* allow multiple rows */
  gap: 12rpx; /* spacing between cards */
  justify-content: space-between;
}

