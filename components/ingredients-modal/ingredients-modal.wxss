.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
}

.label{
  box-sizing: border-box;
  font-weight: bold;
  font-size: 18px;
}
.modal {
  background: #f5fdfd;
  width: 100%;
  height: 75%;  
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 50rpx;
  animation: slideUp 0.3s ease-out;
  display: flex;
  flex-direction: column;
}

.list {
  margin-top: 20rpx;
  flex: 1;             /* only fills inside half-screen modal */
  overflow-y: auto;    /* allow scroll if list is long */
}

.item {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.unit {
  color: #888;
  font-size: 24rpx;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.no-results {
  text-align: center;
  padding: 40rpx 0;
  color: #888;
  font-size: 28rpx;
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 25rpx 35rpx;
  border-radius: 50rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.name{
  font-size: 18px;
  font-weight: bold;
  margin-left: 10px;
}

.add-btn{
  margin: 0;
  background-color: #009688;
  color: #fff;
  border-radius: 50rpx;
}