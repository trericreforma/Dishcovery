
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 1000;
}

.modal-mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* Modal body */
.modal-container {
  width: 100%;
  height: 100%;
  background: #fff;
  overflow-y: auto;
  position: relative;
  transform: translateY(100%);
  transition: transform 0.35s ease;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.modal-container.slide-up {
  transform: translateY(0);
}
.modal-container.slide-down {
  transform: translateY(100%);
}

.recipe-image {
  width: 100%;
  height: 45%;
  object-fit: cover;
}

.recipe-content {
  padding: 0 50rpx;
  width: 100vw;
  position: relative;
  display: inline-block;
  box-sizing: border-box;
}

.recipe-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}

.recipe-author{
  display: block;
  font-size: 12px;
  color:  #8d8c8c;
}

.recipe-desc-title {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  line-height: 1.5;
  margin-bottom: 20rpx;
  margin-top: 55rpx;
}
.recipe-desc {
  font-size: 25rpx;
  color: #666;
  line-height: 1.5;
}

.modal-curve{
  width: 100vw;
  height: 20px;
  position: absolute;
  top: -21px;
  right: 0;
  left: 0rpx;
  background: #fff;
  border-radius: 150rpx 150rpx 0 0;
}

.recipe-details-spacer {
  height: 16rpx;
}

/* Removed recipe sub-details styles */

.close-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 0;
}
.steps{
  position: relative;
  box-sizing: border-box;
  padding: 25rpx;
  margin-bottom: 25rpx;
  display: block;
  background-color: #f5f9fd;
}

.recipe-title-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; /* pushes icon to right */
  margin-bottom: 8rpx;
}

.recipe-title {
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
}

.bookmark-icon {
  width: 40rpx;
  height: 40rpx;
}
