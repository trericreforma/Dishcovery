:host {
  width: 48%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.image-card {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  background: #fff;
  display: flex;
  flex-direction: column;
  height: 350rpx;
}

/* Image takes ~70% of the card */
.card-image {
  width: 100%;
  height: 75%;
  object-fit: cover;
}

/* Content section */
.card-content {
  padding: 20rpx;
  flex: 1;
  box-sizing: border-box;
}

.card-title {
  font-weight: bold;
  font-size: 24rpx;
  display: block;
  line-height: 0.8sss;
}

.card-desc {
  font-size: 20rpx;
  color: #767676;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; /* keep one line */
}
